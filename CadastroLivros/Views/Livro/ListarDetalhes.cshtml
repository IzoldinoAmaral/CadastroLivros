@model DetalhesLivroViewModel

<div class="modal-header">
    <h5 class="modal fade " id="detalhesModal">Detalhes do Livro: @Model.NomeLivro</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <table class="table">
        <thead>
            <tr>
                <th>Forma de Compra</th>
                <th>Desconto</th>
                <th>Valor Final</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var preco in Model.Precos)
            {
                <tr>
                    <td>@preco.FormaCompra</td>
                    <td>@preco.Desconto:p</td>
                    <td>@preco.ValorFinal:c</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
</div>

