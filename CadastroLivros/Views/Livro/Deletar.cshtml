@model Livro
@{
    ViewData["Title"] = "Confirmação deletar livro";
}

<div class="text-center">
    <h3>Deseja deletar o livro (@Model.Titulo)?</h3>
</div>

<a class="btn btn-primary d-block" asp-controller="Livro" asp-action="Index" role="button">Cancelar Exclusão</a>
<a class="btn btn-danger d-block" asp-controller="Livro" asp-action="ConfirmarDelecao" asp-route-id="@Model.Codl" role="button">Confirmar Exclusão</a>

