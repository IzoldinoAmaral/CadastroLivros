@model Assunto
@{
    ViewData["Title"] = "Confirmação deletar assunto";
}

<div class="text-center">
    <h3>Deseja deletar o Assunto (@Model.Descricao)?</h3>
</div>

<a class="btn btn-primary d-block" asp-controller="Assunto" asp-action="Index" role="button">Cancelar Exclusão</a>
<a class="btn btn-danger d-block" asp-controller="Assunto" asp-action="ConfirmarDelecao" asp-route-id="@Model.CodAs" role="button">Confirmar Exclusão</a>

