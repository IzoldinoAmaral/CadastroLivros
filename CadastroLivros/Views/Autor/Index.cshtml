@model IEnumerable<Autor>
@{
    ViewData["Title"] = "Listagem de Autores";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Autor" asp-action="Criar">Adicionar novo autor</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <h1 class="display-4">Listagem de Autores</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Autor</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Autor autor in Model)
                {
                    <tr>
                        <th scope="row">@autor.CodAu</th>
                        <td>@autor.Nome</td>                        
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a role="button" class="btn btn-primary" asp-route-id="@autor.CodAu" asp-controller="Autor" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@autor.CodAu" asp-controller="Autor" asp-action="Deletar">Deletar</a>
                            </div>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>

</div>